<?xml version="1.0" encoding="UTF-8"?>
<schemalist>
  <schema id="org.gnome.shell.extensions.gh-pr-indicator"
          path="/org/gnome/shell/extensions/gh-pr-indicator/">

    <key name="show-my-prs" type="b">
      <default>true</default>
      <summary>Show PRs opened by me</summary>
    </key>

    <key name="show-review-prs" type="b">
      <default>true</default>
      <summary>Show PRs pending my review</summary>
    </key>

    <key name="menu-width" type="i">
      <default>400</default>
      <range min="250" max="800"/>
      <summary>Menu width in pixels</summary>
    </key>

    <key name="gh-path" type="s">
      <default>'/usr/bin/gh'</default>
      <summary>Path to the gh CLI binary</summary>
    </key>

    <key name="max-items" type="i">
      <default>25</default>
      <range min="5" max="50"/>
      <summary>Maximum number of PRs to fetch per section</summary>
    </key>

    <key name="show-actions" type="b">
      <default>true</default>
      <summary>Show GitHub Actions section</summary>
    </key>

    <key name="actions-hours-ago" type="i">
      <default>4</default>
      <range min="1" max="72"/>
      <summary>Time window for action runs in hours</summary>
    </key>

    <key name="actions-repos" type="s">
      <default>''</default>
      <summary>Comma-separated repositories to monitor for actions</summary>
    </key>

    <key name="actions-workflows" type="s">
      <default>'{}'</default>
      <summary>JSON mapping of repo to workflow name visibility</summary>
    </key>

  </schema>
</schemalist>
